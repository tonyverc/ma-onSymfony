{% extends 'base.html.twig' %}

{% block title %}Services{% endblock %}

{% block body %}

<div class="container">
  <div class="row">
    {% for service in services %}
      <div class="col-md-4 mb-4 d-flex justify-content-center mt-4">
        <div class="card" style="width: auto;">
          <img src="{{ service.image }}" class="card-img-top p-2" alt="{{ service.nom }}">
          <h2 class="text-center">{{ service.nom }}</h2>
          <div class="card-body">
            <p class="card-text">{{ service.description }}</p>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

{% endblock %}
